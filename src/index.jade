doctype html
html(lang='en' ng-app='rss')
  head
    title Angular RSS
    script(src='bower_components/platform/platform.js')
    script(src='bower_components/lodash/dist/lodash.min.js')

    link(rel="import" href="bower_components/core-toolbar/core-toolbar.html")
    link(rel="import" href="bower_components/core-header-panel/core-header-panel.html")
    link(rel="import" href="bower_components/core-icons/core-icons.html")
    link(rel="import" href="bower_components/paper-icon-button/paper-icon-button.html")
    link(rel="import" href="bower_components/core-drawer-panel/core-drawer-panel.html")
    link(rel='import' href='../bower_components/paper-tabs/paper-tabs.html')
    link(rel="import" href="elements/add-feed-dialog.html")
    link(rel="import" href="elements/feed-list.html")
    link(rel="import" href="elements/feed-tabs.html")
    link(href='http://fonts.googleapis.com/css?family=Roboto:400,300' rel='stylesheet' type='text/css')
    link(href='css/app.css' rel='stylesheet')
    style(shim-shadowdom).
      paper-icon-button.white::shadow core-icon {
        fill: #fff;
      }

  body(unresolved fullbleed)
    feed-list
    core-header-panel(mode='seamed')
      core-toolbar
        div(flex style='color:white;') Feed Reader
        paper-icon-button.white(icon='add')

        div.bottom.fit(horizontal layout)
      feed-tabs

    div
        add-feed-dialog
    script.
      document.addEventListener('polymer-ready', function(e) {
        var btn = document.querySelector('paper-icon-button');
        var dialog = document.querySelector('add-feed-dialog').$.add;

        btn.addEventListener('click', function(e) {
          dialog.toggle();
        });
      });
